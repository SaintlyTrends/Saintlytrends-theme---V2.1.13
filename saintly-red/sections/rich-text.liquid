{% schema %}
{ "name": "Rich Text",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Designed with purpose. Made to move." },
    { "type": "textarea", "id": "body", "label": "Body", "default": "Saintly blends quality and speed with a sustainable mindset." }
  ],
  "presets": [{ "name": "Rich Text" }]
}
{% endschema %}
<section class="container" style="padding:32px 0">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.body }}</p>
</section>
