{% schema %}
{ "name": "Header",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" }
  ],
  "presets": [{ "name": "Header" }]
}
{% endschema %}
<div class="header container">
  <a class="logo" href="/">
    {% if section.settings.logo != blank %}
      <img src="{{ section.settings.logo | image_url: width: 240 }}" alt="Saintly logo" height="40" style="height:40px"/>
    {% else %}SAINTLY{% endif %}
  </a>
  <nav class="nav">
    <a href="/collections/all">Shop</a>
    <a href="/pages/about">About</a>
    <a href="/cart">Cart ({{ cart.item_count }})</a>
  </nav>
</div>
