{% schema %}
{ "name": "Hero Banner",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Too Good To Be True" },
    { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "Trend-forward fashion, born in India." },
    { "type": "image_picker", "id": "image", "label": "Background image" },
    { "type": "url", "id": "cta_link", "label": "CTA link" },
    { "type": "text", "id": "cta_text", "label": "CTA text", "default": "Shop Now" }
  ],
  "presets": [{ "name": "Hero Banner" }]
}
{% endschema %}
<section class="hero">
  <div class="container">
    <h1 class="hero__title">{{ section.settings.title }}</h1>
    <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
    {% if section.settings.cta_link != blank %}
      <a class="btn btn--primary" href="{{ section.settings.cta_link }}">{{ section.settings.cta_text }}</a>
    {% endif %}
  </div>
</section>
