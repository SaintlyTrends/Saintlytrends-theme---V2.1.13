{% schema %}
{ "name": "Featured Collections",
  "settings": [],
  "blocks": [
    { "type": "collection", "name": "Collection", "settings": [
      { "type": "collection", "id": "collection", "label": "Collection" }
    ]}
  ],
  "max_blocks": 6,
  "presets": [{ "name": "Featured Collections", "blocks":[{"type":"collection"},{"type":"collection"},{"type":"collection"}]}]
}
{% endschema %}
<section>
  <div class="container">
    <h2>Collections</h2>
    <div class="grid">
      {% for block in section.blocks %}
        {% assign c = block.settings.collection %}
        <article class="card">
          <h3><a href="{{ c.url }}">{{ c.title }}</a></h3>
          <p>{{ c.description | strip_html | truncate: 100 }}</p>
        </article>
      {% endfor %}
    </div>
  </div>
</section>
